{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "baseUrl": ".", 
        "outDir": "./dist",
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "node",
        "paths": {
            "@/*": ["./src/*"],
            "@shared/*": ["../shared/src/*"]
        }
    },
    "include": [
        "src/**/*"
    ]
}